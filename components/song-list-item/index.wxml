<!--components/song-list-item/index.wxml-->
<wxs module="format" src="/utils/format.wxs"></wxs>
<view class="item">
  <view class="top">
    <image class="image" mode="widthFix" src="{{item.coverImgUrl}}"></image>
    <view class="play-counter">{{format.formatCount(item.playCount)}}</view>
  </view>
  <view class="bottom">
    {{item.name}}
  </view>
</view>