/* components/song-menu-item/index.wxss */
.item {
  display: flex;
  flex-direction: column;
  width: 220rpx;
}

.image {
  width: 100%;
}

.top {
  position: relative;
}

.play-counter {
  position: absolute;
  bottom: 10rpx;
  right: 0;
  font-size: 19rpx;
  color: #fff;
  background-color: #363437;
  opacity: 0.7;
  border-radius: 20rpx;
  padding: 5rpx 10rpx;
}

.name {
  width: 100%;
  font-size: 26rpx;

  /* 显示两行 */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}